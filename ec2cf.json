{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Creates EC2 instance with | port=80,443,22 | EBS volume=20 GB | NGINX ",
  "Parameters": {
    "KeyName": {
      "Type": "AWS::EC2::KeyPair::KeyName",
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the EC2 instance."
    },
	"TagName": {
      "Type": "String",
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the EC2 instance."
    },
    "InstanceType": {
      "Description": "EC2 instance type",
      "Type": "String",
      "Default": "t2.micro",
      "ConstraintDescription": "Please choose a valid instance type."
    }
   },
  "Resources": {
      "NewVolume" : {
   "Type" : "AWS::EC2::Volume",
   "Properties" : {
      "Size" : "10",
      "AvailabilityZone" : { "Fn::GetAtt" : [ "LinuxInstance", "AvailabilityZone" ] },
      "Tags" : [ {
         "Key" : "MyTag",
          "Value" : "TagValue"
      } ]
   }
},
            
"MountPoint" : {
   "Type" : "AWS::EC2::VolumeAttachment",
   "Properties" : {
      "InstanceId" : { "Ref" : "LinuxInstance" },
      "VolumeId"  : { "Ref" : "NewVolume" },
      "Device" : "/dev/sdh"
   }
},
    "LinuxInstance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-05d72852800cbf29e",
        "InstanceType": { "Ref": "InstanceType" },
        "KeyName": { "Ref": "KeyName" },
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/xvda",
            "Ebs": {
              "VolumeType": "gp2",
              "VolumeSize": "20",
              "DeleteOnTermination":"true",
              "Encrypted": "true"
            }
          }
        ],
		"SecurityGroupIds" : ["sg-04d5095a5ad2c3598"],
        "SubnetId" : "subnet-a9b073c2",
		"Tags" : [
		{
  "Key" : "Name",
  "Value" : { "Ref": "TagName" }
}],
		 "UserData" : {"Fn::Base64" : { "Fn::Join" : ["",[
			"#!/bin/bash","\n",
			"\n","sudo su","\n",
                         "\n", "yum update -y","\n",
			  "\n", "yum install mysql -y","\n",
			 "\n", "yum install epel-release","\n",
			 "\n", "amazon-linux-extras install nginx1","\n",
                          "\n", "systemctl start nginx"]]}
        }
    }
  }
}
}
